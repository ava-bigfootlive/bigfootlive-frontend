# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bigfootlive
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this
COOKIE_MAX_AGE=86400000
CSRF_SECRET=your-csrf-secret

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# MFA Configuration
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# SSO Configuration
SSO_BASE_URL=http://localhost:3001
SSO_CALLBACK_PATH=/api/auth/sso/callback
SSO_METADATA_PATH=/api/auth/sso/metadata

# Streaming Configuration
RTMP_PORT=1935
RTMP_CHUNK_SIZE=60000
RTMP_PING=30
RTMP_PING_TIMEOUT=60

# Event Container Configuration
CONTAINER_REGISTRY=your-registry.com
CONTAINER_CPU_LIMIT=2000m
CONTAINER_MEMORY_LIMIT=4Gi
CONTAINER_AUTO_SCALE=true
CONTAINER_MIN_INSTANCES=0
CONTAINER_MAX_INSTANCES=100

# Storage Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_RECORDINGS=bigfoot-recordings
S3_BUCKET_THUMBNAILS=bigfoot-thumbnails
S3_BUCKET_ARTIFACTS=bigfoot-artifacts

# CDN Configuration
CDN_BASE_URL=https://cdn.bigfootlive.com
HLS_SEGMENT_DURATION=6
HLS_LIST_SIZE=10

# Analytics Configuration
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=5000
ANALYTICS_RETENTION_DAYS=90

# Chat Configuration  
CHAT_MAX_MESSAGE_LENGTH=500
CHAT_RATE_LIMIT_MESSAGES=10
CHAT_RATE_LIMIT_WINDOW=60
CHAT_MODERATION_ENABLED=true

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@bigfootlive.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@bigfootlive.com

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# Feature Flags
ENABLE_CHAT=true
ENABLE_ANALYTICS=true
ENABLE_RECORDINGS=true
ENABLE_DONATIONS=true
ENABLE_MODERATION=true
