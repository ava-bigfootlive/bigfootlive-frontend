/* Theme Migration Utilities - Tailwind Utilities/Components */

@layer components {
  /* Enhanced Card Components */
  .card-enhanced {
    @apply border rounded-md shadow-lg transition-all duration-200;
    border-color: hsl(var(--border) / 0.5);
    background-color: hsl(var(--card) / 0.9);
    backdrop-filter: blur(8px);
  }
  
  .card-enhanced:hover {
    @apply shadow-xl transform-gpu translate-y-[-2px];
  }
  
  .card-metric {
    @apply relative overflow-hidden border rounded-md p-6 transition-all duration-200 cursor-pointer;
    border-color: hsl(var(--border) / 0.5);
    background-color: hsl(var(--card) / 0.9);
    backdrop-filter: blur(8px);
  }
  
  .card-metric:hover {
    @apply scale-105 shadow-xl;
  }
  
  .card-metric::before {
    content: '';
    @apply absolute top-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-primary to-transparent transform -translate-x-full;
    animation: shimmer 3s infinite;
  }
  
  /* Glass Morphism Effects */
  .glass-panel {
    @apply border rounded-md shadow-lg;
    border-color: hsl(var(--border) / 0.3);
    background-color: hsl(var(--card) / 0.3);
    backdrop-filter: blur(24px);
  }
  
  .glass-dark {
    @apply border rounded-md shadow-xl;
    border-color: hsl(var(--border) / 0.2);
    background-color: hsl(var(--background) / 0.3);
    backdrop-filter: blur(24px);
  }
  
  /* Page Layout Components */
  .page-header {
    @apply mb-8;
  }
  
  .page-title {
    @apply text-3xl font-bold tracking-tight mb-2;
  }
  
  .page-description {
    @apply text-muted-foreground text-lg;
  }
  
  /* Action Buttons */
  .action-button {
    @apply shadow-md transition-all duration-200 hover:shadow-lg hover:scale-105 active:scale-95;
  }
  
  .go-live-button {
    @apply inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 text-white font-semibold rounded-lg shadow-lg transition-all duration-200 hover:shadow-xl hover:scale-105;
  }
  
  /* Stream Status Indicators */
  .status-live {
    @apply inline-flex items-center gap-1 px-2 py-1 bg-red-600 text-white text-xs font-bold uppercase tracking-wide rounded animate-pulse;
  }
  
  .status-scheduled {
    @apply inline-flex items-center gap-1 px-2 py-1 bg-blue-600/20 text-blue-400 text-xs font-medium rounded border border-blue-600/30;
  }
  
  .status-ended {
    @apply inline-flex items-center gap-1 px-2 py-1 bg-gray-600/20 text-gray-400 text-xs font-medium rounded border border-gray-600/30;
  }
  
  /* Interactive Panels */
  .panel {
    @apply rounded-md border p-6 shadow-sm transition-all duration-200;
    border-color: hsl(var(--border) / 0.5);
    background-color: hsl(var(--card) / 0.5);
  }
  
  .panel:hover {
    @apply shadow-md;
    border-color: hsl(var(--border) / 0.7);
  }
  
  .panel-header {
    @apply flex items-center justify-between mb-4 pb-4 border-b;
    border-bottom-color: hsl(var(--border) / 0.3);
  }
  
  /* Section Styling */
  .section-title {
    @apply text-xl font-semibold mb-1;
  }
  
  .section-divider {
    @apply my-8 border-t;
    border-top-color: hsl(var(--border) / 0.3);
  }
  
  /* Metric Grid Layout */
  .metric-grid {
    @apply grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-4;
  }
  
  .content-grid {
    @apply grid gap-6 grid-cols-1 lg:grid-cols-2;
  }
  
  /* Hover Effects */
  .hover-lift {
    @apply transition-transform duration-200 hover:-translate-y-1;
  }
  
  .hover-glow {
    @apply transition-all duration-300 hover:shadow-lg hover:shadow-primary/20;
  }
  
  /* Stream Cards */
  .stream-card {
    @apply relative rounded-lg overflow-hidden transition-all duration-300 cursor-pointer hover:-translate-y-1 hover:shadow-xl;
    background-color: hsl(var(--card));
  }
  
  .stream-thumbnail {
    @apply relative aspect-video bg-black overflow-hidden;
  }
  
  .stream-info {
    @apply p-3;
  }
  
  .stream-title {
    @apply text-base font-semibold line-clamp-2 mb-2 transition-colors duration-200 hover:text-primary;
  }
  
  /* Live Indicators */
  .live-indicator {
    @apply absolute top-3 left-3 inline-flex items-center gap-1 px-2 py-1 bg-red-600 text-white text-xs font-bold uppercase tracking-wide rounded z-10;
  }
  
  .live-indicator::before {
    content: '';
    @apply w-1.5 h-1.5 bg-white rounded-full animate-pulse;
  }
  
  /* Viewer Count */
  .viewer-count {
    @apply absolute bottom-3 right-3 inline-flex items-center gap-1 px-2 py-1 bg-black/80 text-white text-xs font-semibold rounded;
    backdrop-filter: blur(8px);
  }
  
  /* Form Elements */
  .form-input {
    @apply border rounded-lg px-4 py-2 text-foreground transition-all duration-200 focus:outline-none focus:border-primary focus:shadow-lg focus:shadow-primary/10;
    background-color: hsl(var(--background) / 0.5);
    border-color: hsl(var(--border) / 0.5);
  }
  
  .form-input:focus {
    background-color: hsl(var(--background) / 0.8);
  }
  
  .form-textarea {
    @apply border rounded-lg px-4 py-2 text-foreground transition-all duration-200 focus:outline-none focus:border-primary focus:shadow-lg focus:shadow-primary/10 resize-none;
    background-color: hsl(var(--background) / 0.5);
    border-color: hsl(var(--border) / 0.5);
  }
  
  .form-textarea:focus {
    background-color: hsl(var(--background) / 0.8);
  }
  
  /* Loading States */
  .skeleton-pulse {
    @apply bg-gradient-to-r from-muted/50 via-muted/75 to-muted/50 bg-[length:200%_100%] animate-pulse rounded;
    animation: skeleton-loading 1.5s ease-in-out infinite;
  }
  
  /* Tab System */
  .tabs-enhanced {
    @apply space-y-4;
  }
  
  .tabs-list {
    @apply grid w-full grid-cols-2 lg:grid-cols-6 bg-muted/20 rounded-lg p-1;
  }
  
  .tabs-trigger {
    @apply px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 data-[state=active]:bg-background data-[state=active]:shadow-sm;
  }
  
  /* Analytics Components */
  .analytics-card {
    @apply border rounded-lg p-6 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl;
    border-color: hsl(var(--border) / 0.5);
    background-color: hsl(var(--card) / 0.5);
    backdrop-filter: blur(4px);
  }
  
  .analytics-card:hover {
    background-color: hsl(var(--card) / 0.8);
  }
  
  .chart-container {
    @apply border rounded-lg p-5;
    border-color: hsl(var(--border) / 0.2);
    background-color: hsl(var(--card) / 0.2);
  }
  
  /* Settings Components */
  .color-preset {
    @apply w-10 h-10 rounded-md transition-all duration-200 cursor-pointer hover:scale-110 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2;
  }
  
  .settings-section {
    @apply space-y-6;
  }
  
  .settings-group {
    @apply space-y-4;
  }
  
  /* Utility Classes */
  .fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }
  
  .slide-in {
    animation: slideIn 0.3s ease-out;
  }
}

@layer utilities {
  /* Animation Keyframes */
  @keyframes shimmer {
    100% {
      transform: translateX(100%);
    }
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  @keyframes slideIn {
    from {
      transform: translateX(-1rem);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
  
  @keyframes skeleton-loading {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }
  
  /* Feature Flag Utilities */
  .feature-deprecated {
    @apply opacity-75 transition-opacity duration-300;
  }
  
  .feature-new {
    @apply ring-2 ring-primary/20 ring-offset-2 ring-offset-background;
  }
  
  /* Responsive Utilities */
  .container-responsive {
    @apply w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8;
  }
  
  /* Z-Index Management */
  .z-dropdown {
    z-index: 50;
  }
  
  .z-modal {
    z-index: 50;
  }
  
  .z-header {
    z-index: 40;
  }
  
  .z-sidebar {
    z-index: 30;
  }
}

/* Responsive Design Patterns */
@media (max-width: 768px) {
  .metric-grid {
    @apply grid-cols-1;
  }
  
  .content-grid {
    @apply grid-cols-1;
  }
  
  .tabs-list {
    @apply grid-cols-3;
  }
}

@media (max-width: 640px) {
  .tabs-list {
    @apply grid-cols-2;
  }
  
  .page-title {
    @apply text-2xl;
  }
}
